<?xml version="1.0" encoding="UTF-8"?>
<project>

    <description>Convenient module that embeds the minimal back-office modules for the Event layer.</description>

    <exported-packages>
        <source-packages/>
    </exported-packages>

    <dependencies>
        <used-by-source-modules/>
        <plugin-module>modality-event-backoffice-activity-pricing-plugin</plugin-module>

        <!-- This will add the event button selector in the main frame header -->
        <plugin-module>modality-event-backoffice-header-eventselector-plugin</plugin-module>
        <!-- This will add the create event button in the main frame header -->
        <plugin-module>modality-event-backoffice-header-eventcreator-plugin</plugin-module>
        <!-- This will register the Events Gantt Canvas as the main frame Gantt Canvas -->
        <plugin-module>modality-event-backoffice-events-ganttcanvas-plugin</plugin-module>

    </dependencies>

</project>