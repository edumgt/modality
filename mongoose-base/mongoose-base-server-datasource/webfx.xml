<?xml version="1.0" encoding="UTF-8"?>
<project>

    <required-libraries>
        <library artifact="org.junit.jupiter:junit-jupiter:5.8.2"/>
        <library artifact="org.mockito:mockito-inline:3.5.13"/>
    </required-libraries>

    <exported-packages>
        <source-packages/>
        <resource-package>mongoose.base.server.datasource.MDS</resource-package>
    </exported-packages>

    <providers>
        <dev.webfx.platform.shared.services.datasource.spi.LocalDataSourceProvider>mongoose.base.server.services.datasource.MongooseLocalDataSourceProvider</dev.webfx.platform.shared.services.datasource.spi.LocalDataSourceProvider>
    </providers>

    <dependencies>
        <used-by-source-modules>
            <undetected-module>webfx-framework-shared-orm-domainmodel</undetected-module>
            <undetected-module>webfx-framework-shared-orm-dql</undetected-module>
            <undetected-module scope="test">junit-jupiter</undetected-module>
            <undetected-module scope="test">mockito-inline</undetected-module>
        </used-by-source-modules>
    </dependencies>

    <maven-pom-manual>
        <build>
            <plugins>
                <plugin>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>3.0.0-M5</version>
                    <configuration>
                        <excludes>
                            <exclude>**/*IT</exclude>
                        </excludes>
                    </configuration>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-failsafe-plugin</artifactId>
                    <version>3.0.0-M5</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>integration-test</goal>
                                <goal>verify</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </build>
    </maven-pom-manual>

</project>