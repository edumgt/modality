<?xml version="1.0" encoding="UTF-8"?>
<project>

    <description>Define a generic Modality JavaFX application (common code to the back-office and front-office).</description>

    <properties>
        <show-loading-spinner-on-startup>true</show-loading-spinner-on-startup>
    </properties>

    <exported-packages>
        <source-packages/>
        <resource-packages/>
    </exported-packages>

    <dependencies>
        <used-by-source-modules>
            <module transitive="true">webfx-stack-orm-domainmodel-activity</module> <!-- for Activity in constructor -->
            <module transitive="true">webfx-stack-routing-activity</module> <!-- for Activity in constructor -->
            <module transitive="true">webfx-platform-util</module> <!-- for Factory in constructor -->
            <undetected-module>javafx-controls</undetected-module>
        </used-by-source-modules>

        <resource-module>modality-base-client-icons</resource-module>

    </dependencies>

    <html>
        <head>
            <link rel="preconnect" href="https://fonts.googleapis.com"/>
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin=""/>
            <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap" rel="stylesheet"/>
        </head>
    </html>

</project>